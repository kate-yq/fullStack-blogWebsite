<%- include('partials/header') -%>

    <h1>Compose</h1>
    
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="postTitle">
            <label for="post" class="form-label">Post</label>
            <textarea class="form-control" id="post" name="postBody" rows="8" cols="30"></textarea>
        </div>
        <button class="btn-md btn-primary btn" type="submit" name="button">Publish</button>
    </form>

<%- include('partials/footer') -%>